<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    tools:context=".App_Settings">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:weightSum="5">

        <Button
            android:id="@+id/btn_back"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginLeft="-10dp"
            android:paddingTop="5dp"
            android:background="@drawable/baseline_keyboard_arrow_left_24"
            app:backgroundTint="@color/white" />

        <TextView
            android:id="@+id/tv_Settings_activity"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:gravity="center"
            android:padding="2dp"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:text="@string/settings"
            android:textSize="28sp" />
    </LinearLayout>

    <View
        android:layout_width="380dp"
        android:layout_height="0.5dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="10dp"
        android:layout_gravity="center"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="5dp"
        android:background="@color/white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="3dp"
        android:weightSum="5" >
        <TextView
            android:id="@+id/tv_change_app_color"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:gravity="center_vertical"
            android:layout_marginTop="15dp"
            android:drawablePadding="15dp"
            android:paddingStart="10dp"
            android:text="@string/change_app_color"
            android:textColor="@color/white"
            app:drawableEndCompat="@drawable/baseline_keyboard_arrow_right_24"
            app:drawableStartCompat="@drawable/baseline_color_lens_24" />
        <TextView
            android:id="@+id/tv_change_app_typography"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:gravity="center_vertical"
            android:layout_marginTop="15dp"
            android:drawablePadding="15dp"
            android:paddingStart="10dp"
            android:text="@string/change_app_typography"
            android:textColor="@color/white"
            app:drawableEndCompat="@drawable/baseline_keyboard_arrow_right_24"
            app:drawableStartCompat="@drawable/baseline_text_format_24" />

        <TextView
            android:id="@+id/tv_change_app_language"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:gravity="center_vertical"
            android:layout_marginTop="15dp"
            android:drawablePadding="15dp"
            android:paddingStart="10dp"
            android:text="@string/change_app_language"
            android:textColor="@color/white"
            app:drawableEndCompat="@drawable/baseline_keyboard_arrow_right_24"
            app:drawableStartCompat="@drawable/baseline_language_24" />





    </LinearLayout>


</LinearLayout>